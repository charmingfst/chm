<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6e6e6"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:id="@+id/cai_tp"
	 />    
	 <RelativeLayout 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content">
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/cai_name"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
	    android:textAppearance="?android:attr/textAppearanceInverse"
	    android:shadowColor="#FF6401"
	    android:shadowRadius="3.0"
	    android:textColor="#717474"/>
	<TextView 
	    android:layout_below="@id/cai_name"
	    android:layout_marginLeft="10dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/cai_price"
	    android:textColor="#FF6401"
	    android:textSize="18sp"/>
	<ImageButton 
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:id="@+id/cai_plus"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="20dp"
	    android:background="@drawable/menu_plus"
	    android:layout_centerVertical="true"
	    />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="0"
	    android:textColor="#000"
	    android:visibility="gone"
	    android:id="@+id/cai_sum"
	    android:layout_marginRight="4dp"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@id/cai_plus"/>
	<ImageButton 
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:id="@+id/cai_remove"
	    android:layout_marginRight="4dp"
	    android:background="@drawable/cai_remove"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@id/cai_sum"
	    android:visibility="gone"
	    />
	</RelativeLayout>
</LinearLayout>
